extends ../layout/index

block contenido 
    div.py-10
        h1.text-6xl.my-10.font-extrabold.text-center Inmo
            span.font-normal Linking             
        h2.text-2xl.text-center.font-extrabold= pagina /* Olvide Contraseña */

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 

        div.mt-8.mx-auto.max-w-md.py-8.px-4.shadow.bg-white 
            form.space-y-5(method="POST" noValidate)
                input(type="hidden" name="_csrf" value= csrfToken)
                div
                    label.block.text-sm.uppercase.mb-2.font-bold.text-gray-500(for="password") Nueva Contraseña
                    input#password.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nueva Contraseña" type="password" name="password")

                input(class="w-full bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Guardar Contrase")