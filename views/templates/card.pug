div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`imagen propiedad ${propiedad.titulo}`)
    div(class="p-5 space-y-3")
        h3(class="text-2xl font-bold text-gray-800")= propiedad.titulo
        p(class="text-sm text-gray-600") Habitaciones: 
            span(class="font-bold text-gray-800")= propiedad.habitaciones
        p(class="text-sm text-gray-600") WC: 
            span(class="font-bold text-gray-800")= propiedad.wc
        p(class="text-sm text-gray-600") Precio: 
            span(class="font-bold text-gray-800")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-cyan-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Propiedad